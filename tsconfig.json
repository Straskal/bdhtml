{
  "compilerOptions": {
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,
    "module": "es6",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}